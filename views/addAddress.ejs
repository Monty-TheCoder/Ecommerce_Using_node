            </div>
            <div class="col-md-9 justify-content-center">
                <div class="card card-custom pb-4">
                    <div class="card-body mt-0 mx-5">
                        <div class="text-center mb-3 pb-2 mt-3">
                            <h4 style="color: #495057 ;">Delivery Details</h4>
                        </div>

                        <form class="mb-0" action="/addAddress" method="post">

                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" name="fname" id="form9Example1"
                                            class="form-control input-custom" required />
                                        <label class="form-label" for="form9Example1">First name</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="form9Example2" name="lname"
                                            class="form-control input-custom" required />
                                        <label class="form-label" for="form9Example2">Last name</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="form9Example3" name="city"
                                            class="form-control input-custom" required />
                                        <label class="form-label" for="form9Example3">City</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="form9Example3" name="state"
                                            class="form-control input-custom" required />
                                        <label class="form-label" for="form9Example3">state</label>
                                    </div>
                                </div>

                            </div>
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="form9Example6" name="address"
                                            class="form-control input-custom" required />
                                        <label class="form-label" for="form9Example6">Address</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="form9Example4" name="zip"
                                            class="form-control input-custom" required />
                                        <label class="form-label" for="form9Example4">Zip</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-4">

                                <div class="col">
                                    <div class="form-outline">
                                        <input type="text" id="typeEmail" name="phone" class="form-control input-custom"
                                            required />
                                        <label class="form-label" for="typeEmail">Phone</label>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <input type="email" id="typeEmail" name="email
                                        " class="form-control input-custom" required />
                                        <label class="form-label" for="typeEmail">Email</label>
                                    </div>
                                </div>
                            </div>

                            <div class="float-end ">
                                <!-- Submit button -->
                                <button type="submit" onclick="location.href='/address/myAddress'"
                                    class="btn btn-primary btn-rounded btn-sm mt-2">Add
                                </button>
                                <!-- <button type="submit" class="btn btn-primary btn-rounded"
                                    style="background-color: #0062CC ;">Place order</button> -->
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>


